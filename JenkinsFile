pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Check out the code from the Git repository
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], userRemoteConfigs: [[url: 'https://github.com/apaquette/Jenkins-Project.git']]])
            }
        }
        stage('Build'){
            steps{
                //run the java compiler
                bat 'javac -d target src/Student.java'
                bat 'javac src/StudentTest.java -cp ./lib/junit-platform-console-standalone-1.9.3.jar'
            }
        }
    }
}